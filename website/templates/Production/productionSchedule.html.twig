<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Beans Order{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
        <link rel="stylesheet" href="{{ asset('assets/css/index.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/productionSchedule.css') }}">
    {% endblock %}
</head>
<body>

<div class="jumbotron text-center">
    <img class="img-logo" src="{{ asset('assets/images/Beans-logo-horizontal-white.png') }}" alt="Logo">
    <h1 class="jumbotron-title">Planning de production</h1>
</div>

<div class="col-md-12">

    <div class="card-deck">

    {% for key, quantity in quantities %}
        <div class="card text-center bg-light border-dark">
            <div class="card-header">
                <b>{{ key }}</b>
{#                {{ key }}#}
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Torréfiés: {{ quantity }}Kg</li>
                <li class="list-group-item">Batch:  {{ batch[key] }} x {{ maxBatch[key] }}Kg</li>
                <li class="list-group-item">Vert : {{ green[key] }}Kg</li>
            </ul>
        </div>
    {% endfor %}
    </div>

</div>


<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Entreprise</th>
        <th scope="col">Email</th>
        <th scope="col">Quantité</th>
        <th scope="col">Date</th>
        <th scope="col">À torréfier</th>
        <th scope="col">Prêt à livrer</th>
    </tr>
    </thead>
    <tbody>

    {% for line in lines %}
    <tr>
        <th scope="row">{{ line.id }}</th>
        <td>{{ line.enterprise }}</td>
        <td>{{ line.email }}</td>
        <td>{{ line.quantity }}</td>
        <td>{{ line.date }}</td>
        <td><input type="checkbox" checked="checked"></td>
{#        <td>{{ line.status }}</td>#}
        <td>{{ line.status }}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>



<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js"></script>
{% endblock %}
</body>
</html>